<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/offline_header"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:padding="0px"
                android:background="@color/colorPrimary"
                android:src="@mipmap/ic_graduation_cap"
                android:id="@+id/offline_logo_id"/>

            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/offline_spinner_id"
                android:layout_weight="1"
                android:textAlignment="center"
                android:padding="5sp"
                android:theme="@style/Widget.AppCompat.DropDownItem.Spinner" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="0px"
                android:background="@color/colorPrimary"
                android:id="@+id/offline_reload_id"
                android:layout_weight="0"
                android:src="@mipmap/ic_reload"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:id="@+id/offline_line1"
            android:layout_height="3sp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/offline_header"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/offline_line1"
            android:id="@+id/offline_details_id">

        </FrameLayout>

    </RelativeLayout>

</FrameLayout>