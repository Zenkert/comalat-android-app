<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_msg_from"
    android:orientation="vertical"
    android:padding="10sp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/offline_logo_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_weight="0"
            android:src="@mipmap/ic_folder" />

        <TextView
            android:id="@+id/offline_lvl_id"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:text="Education Level"/>

        <ImageButton
            android:id="@+id/offline_lvlDL_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="0px"
            android:layout_margin="0px"
            android:layout_weight="0"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_download_black" />

    </LinearLayout>

    <!-- Recycle Courses -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/offline_recycler_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_gravity="fill" />

</LinearLayout>